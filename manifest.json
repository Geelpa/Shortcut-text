{
    "manifest_version": 3,
    "name": "Atalhos de Texto",
    "version": "1.0",
    "description": "Expande atalhos personalizados como /c1 â†’ texto configurado.",
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}